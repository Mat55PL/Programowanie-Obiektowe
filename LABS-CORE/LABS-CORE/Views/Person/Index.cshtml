@model LABS_CORE.Models.Person.PersonViewModel
@{
    ViewData["Title"] = "Person Index Page";
}

<div class="text-center">
    <h1 class="display-4">Persons Table</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">City</th>
            <th scope="col">Gender</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var person in Model.Persons)
            {
                <tr>
                    <th scope="row">@person.Id</th>
                    <td>@person.Name</td>
                    <td>@person.City</td>
                    <td>@person.Gender</td>
                </tr>
            }
        </tbody>
    </table>
</div>